{
  "name": "@raport-digital/server",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ],
          "runtimeArgs": ["--experimental-require-module"]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@raport-digital/server:build",
          "runBuildTargetDependencies": false,
          "runtimeArgs": ["--experimental-require-module"]
        },
        "configurations": {
          "development": {
            "buildTarget": "@raport-digital/server:build:development"
          },
          "production": {
            "buildTarget": "@raport-digital/server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "scripts": {
    "add-account": "ts-node --project tsconfig.app.json ./src/add-account.ts"
  }
}
